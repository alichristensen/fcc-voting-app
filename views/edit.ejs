<% include partials/header %>

<div class="container">
	<h1>Edit <%= poll.name %></h1>
	<form action="/polls/<%= poll._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="title" value="<%= poll.name %>">
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="item1" value="<%= poll.items[0].label %>">
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="item2" value="<%= poll.items[1].label %>">
		</div>
		<div class="form-group">
			<% if(poll.items[2]) { %>
				<input class="form-control" type="text" name="item3" value="<%= poll.items[2].label %>">
			<% } else { %>
				<input class="form-control" type="text" name="item3" placeholder="Option 3">
			<% } %>
		</div>
		<div class="form-group">
			<button style="background-color: rgb(0, 96, 100);" class="btn btn-lg btn-success">Submit</button>
		</div>
	</form>
</div>

<% include partials/footer %>